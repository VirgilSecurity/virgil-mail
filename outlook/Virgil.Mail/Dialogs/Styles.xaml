    </Style>
    
    <Style x:Key="LabelHeaderStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="Foreground" Value="#1E1E1E"></Setter>
        <Setter Property="FontFamily" Value="{StaticResource FontFamily1Semibold}" />
    </Style>
    
</ResourceDictionary>
