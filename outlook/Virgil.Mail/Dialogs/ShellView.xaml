<Window 
    x:Class="Virgil.Mail.Dialogs.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Virgil.Mail.Common"
    Width="350"
    Height="500" 
    MinWidth="350"
    MaxWidth="350"
    MaxHeight="600"
    MinHeight="300"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        
        <ResourceDictionary Source="Styles.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel 
            Grid.Row="0" 
            Margin="15 0"
            HorizontalAlignment="Right"
            Orientation="Horizontal" >
            <Button 
                HorizontalAlignment="Right" 
                Style="{StaticResource ButtonCloseWindowStyle}"
                Click="OnCloseButtonClick" />
        </StackPanel>
        <ContentControl 
            Grid.Row="1" 
            Content="{Binding ContentModel}"
            ContentTemplateSelector="{x:Static common:ServiceLocator.ShellTemplateSelector}" >
        </ContentControl>
    </Grid>
</Window>
