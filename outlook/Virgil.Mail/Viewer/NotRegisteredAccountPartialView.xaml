<UserControl x:Class="Virgil.Mail.Viewer.NotRegisteredAccountPartialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Properties="clr-namespace:Virgil.Mail.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Background="White">
    <Grid>
        <StackPanel 
                Width="300"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Orientation="Vertical">
            <TextBlock 
                TextWrapping="Wrap" 
                Text="{x:Static Properties:Resources.Label_CanNotReadEmailBecauseOfUnregisteredAccount}" />
            <Button 
                Margin="0 20 0 0"
                Padding="20 5"
                HorizontalAlignment="Center"
                Content="{x:Static Properties:Resources.Button_Register}" 
                IsDefault="True"
                Command="{Binding RegisterCommand}"  />
        </StackPanel>
    </Grid>
</UserControl>
